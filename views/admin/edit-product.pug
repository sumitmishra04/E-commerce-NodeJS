extends ../layout/main-layout.pug 

block styles
    link(rel="stylesheet", href="/css/product.css")
    link(rel="stylesheet", href="/css/form.css")

block content
    main
        form.product-form(action="/admin/" + actionRoute, method="POST")
                .form-control
                    label(for="title") Title
                    input(type="text" , name="title", id="title", value="" + product.title)
                .form-control
                    label(for="imageUrl") ImageUrl
                    input(type="text" , name="imageUrl", id="imageUrl" value="" + product.imageUrl)
                .form-control
                    label(for="price") Price
                    input(type="number" , name="price", id="price" value="" + product.price)
                .form-control
                    label(for="description") Description
                    textarea(name="description", id="description", rows="5" ) #{product.description}
                if  editing==='true'
                    input(type="hidden" ,name="id", value="" + product.id)
                button(type="submit") #{buttonText}   

